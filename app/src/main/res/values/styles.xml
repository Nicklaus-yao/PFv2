<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style of Spinner. -->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Style of the Spinners Dropdown menu. -->
    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#006699</item>
        <item name="android:dividerHeight">20dp</item>
        <item name="android:dropDownSelector">#80006699</item>
        <item name="android:popupBackground">#a6417e</item>

    </style>
</resources>
